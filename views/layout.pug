          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/asignaturas') Asignaturas
            li.nav-item
              a.nav-link(href='/profesores') Profesores
            li.nav-item
              a.nav-link(href='/asignaciones') Asignaciones              
