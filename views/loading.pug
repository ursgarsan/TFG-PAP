extends layout

block content
    head
        title Cargando
        style.
            .center-screen {
                display: flex;
                justify-content: center;
                align-items: center;
                margin: 0;
            }

            .loader {
                border: 16px solid #e8eef2ff;
                border-top: 16px solid #37393aff;
                border-radius: 50%;
                width: 120px;
                height: 120px;
                animation: spin 2s linear infinite;
            }

            @keyframes spin {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }
    body
      .dash-container
        h1 Espere mientras se generan las asignaciones
        div.center-screen
            div.loader
        p(style='font-size: small; text-align: center; padding-top: 15px;') Este proceso tarda unos minutos, no cambie de pantalla o podr√° verse afectado.
        script.
            window.onload = function() {
                var xhr = new XMLHttpRequest();
                xhr.open('GET', '/asignaciones/generate', true);
                xhr.onload = function() {
                    if (this.status == 200) {
                        window.location = '/asignaciones';
                    }
                };
                xhr.onerror = function() {
                    console.error('Error during AJAX request');
                };
                xhr.send();
            };