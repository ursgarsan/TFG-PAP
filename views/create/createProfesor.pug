extends ../layout-form

block formContent
  form(action="/profesores/create", method="post")
    label(for="orden") Orden:
    input(type="number", name="orden", required)
    br
    label(for="nombre") Nombre:
    input(type="text", name="nombre", required)
    br
    label(for="apellidos") Apellidos:
    input(type="text", name="apellidos", required)
    br
    label(for="uvus") UVUS:
    input(type="text", name="uvus", required)
    br
    label(for="capacidad") Capacidad:
    input(type="number", name="capacidad", required)
    br
    .button-container2
        button(type="submit", class="btn btn-primary") Crear Profesor
