extends layout

block content
  h1 Listado de Profesores

  table#tablaProfesores.table.table-striped
    thead
      tr
        th(scope='col') Nombre
        th(scope='col') UVUS
        th(scope='col') Capacidad
    tbody
      each profesor in profesores
        tr
          td= profesor.nombre
          td= profesor.uvus
          td= profesor.capacidad
  div.button-container
    a.btn.btn-primary#btnDescargar(href='/plantillas/profesoresPlantilla.xlsx', download='profesoresPlantilla.xlsx') Descargar plantilla para cargar profesores

  script.
    $(document).ready(function() {
      $('#tablaProfesores').DataTable({
        pagingType: 'simple_numbers',
        language: {
          "sProcessing":     "Procesando...",
          "sLengthMenu":     "Mostrar _MENU_ registros",
          "sZeroRecords":    "No se encontraron resultados",
          "sEmptyTable":     "Ningún dato disponible en esta tabla",
          "sInfo":           "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
          "sInfoEmpty":      "Mostrando registros del 0 al 0 de un total de 0 registros",
          "sInfoFiltered":   "(filtrado de un total de _MAX_ registros)",
          "sInfoPostFix":    "",
          "sSearch":         "Buscar:",
          "sUrl":            "",
          "sInfoThousands":  ",",
          "sLoadingRecords": "Cargando...",
          "oPaginate": {
              "sFirst":    "Primero",
              "sLast":     "Último",
              "sNext":     "Siguiente",
              "sPrevious": "Anterior"
          },
          "oAria": {
              "sSortAscending":  ": Activar para ordenar la columna de manera ascendente",
              "sSortDescending": ": Activar para ordenar la columna de manera descendente"
          }
        }
      });

      $('#btnDescargar').on('click', function() {
        Swal.fire({
          icon: 'success',
          text: '¡La plantilla se ha descargado correctamente!',
          showConfirmButton: false,
          timer: 1500
        });
      });
    });

    
